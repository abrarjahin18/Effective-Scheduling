<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:text="Developer Information:"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/rupu"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_below="@id/textView"
            android:text="Anas Sikder"
            android:textSize="30dp"/>


        <TextView
            android:id="@+id/rupu_aust"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_below="@id/rupu"
            android:text="University:AUST"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/anas"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_below="@id/rupu_aust"
            android:text="Abrar Jahin Bhuyain"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/anas_aust"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_below="@id/anas"
            android:text="University:AUST"
            android:textSize="30dp"/>


    </RelativeLayout>

</ScrollView>